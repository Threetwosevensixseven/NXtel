@model NXtelManager.Models.PageEditModel
@{
    var page = Model.Page;
    ViewBag.Title = (page.Title ?? "").Trim();
    var btnCaption = "Edit Page";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<table id="tblEdit" class="edit">
    <tbody>
        <tr>
            <td class="lbl">Page ID:</td>
            <td class="data">@page.PageID &nbsp;&nbsp;<button onclick="launchEditor();return false;">@btnCaption</button></td>
        </tr>
        <tr>
            <td class="lbl">Title:</td>
            <td class="data">@Html.TextBox("PageID", page.Title)</td>
        </tr>
        <tr>
            <td class="lbl">Page No:</td>
            <td class="data">@Html.TextBox("PageNo", page.PageNo)</td>
        </tr>
        <tr>
            <td class="lbl">SubPage:</td>
            <td class="data">@Html.TextBox("SubPage", page.SubPage)</td>
        </tr>
        <tr>
            <td class="lbl">URL:</td>
            <td class="data">@Html.TextArea("URL", page.URL)</td>
        </tr>
    </tbody>
</table>

